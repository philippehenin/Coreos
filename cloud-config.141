#cloud-config
write_files:
  - path: "/etc/resolv.conf"
    permissions: "0644"
    owner: "root"
    content: |
      nameserver 10.48.241.1
  - path: /etc/systemd/system/update-engine.service.d/proxy.conf
    content: |
      [Service]
      Environment=ALL_PROXY=10.55.224.32:3002
hostname: "coreos1"

# include one or more SSH public keys
users:
  - name: core
    passwd: $6$SALT$XockHF1353RJZPZwDSfmklVhBZGmArSVCzW92kVj/4rqaCFkzBqdEoeaIgNp2bSBlB619JKsPBiERmlsUJFJY.
ssh_authorized_keys:
  - ssh-rsa 
coreos:
  etcd2:
    # generate a new token for each unique cluster from https://discovery.etcd.io/new?size=3
    # specify the initial size of your cluster with ?size=X
    discovery: https://discovery.etcd.io/f2e0166a5df75aaa1fdf7cf0a573c635
    advertise-client-urls: http://10.55.224.141:2379,http://10.55.224.141:4001
    initial-advertise-peer-urls: http://10.55.224.141:2380
    # listen on both the official ports and the legacy ports
    # legacy ports can be omitted if your application doesn't depend on them
    listen-client-urls: http://0.0.0.0:2379,http://0.0.0.0:4001
    listen-peer-urls: http://10.55.224.141:2380
  units:
    - name: etcd2.service
      command: start
    - name: fleet.service
      command: start
    - name: flanneld.service
      command: start
      drop-ins:
      - name: 50-network-config.conf
        content: |
          [Service]
          ExecStartPre=/usr/bin/etcdctl set /coreos.com/network/config '{"Network":"10.1.0.0/16", "Backend": {"Type": "vxlan"}}'
    - name: 00-eth0.network
      runtime: true
      content: |
        [Match]
        Name=enp6s0

        [Network]
        DNS=10.48.241.1
        Address=10.55.224.141/23
        Gateway=10.55.225.254
    - name: docker.service
      drop-ins:
        - name: 20-http-proxy.conf
          content: |
            [Unit]
                Requires=flanneld.service
                After=flanneld.service
            [Service]
                Environment="HTTP_PROXY=10.55.224.32:3002"
      command: restart
    - name: systemd-networkd.service
      command: restart
    - name: update-engine.service
      command: restart
